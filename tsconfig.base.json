{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
    "importHelpers": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noEmit": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "paths": {
      "@bin/*": [
        "bin/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "removeComments": true,
    "strict": true,
    "target": "ES2019",
    "types": [
      "node"
    ]
  }
}
